<%= stylesheet_link_tag "posts_edit.css", media: "all" %>



<h1>編集画面</h1>
<div class="edit-list">
    <%= form_with model: @post do |form| %>
    <div class="new_title">
        <%= form.label :住所 %>
        <%= form.text_field :title %>
    </div>
    <div class="new_content">
        <%= form.label :コメント %>
        <%= form.text_area :content %>
    </div>
    <div class="new_rating">
        <%= form.fields_for :ratings do |rating_form| %>
        <%= rating_form.label :value, "星評価" %>
        <%= rating_form.select :value, 1..5 %>
        <% end %>
    </div>
    <div class="new_submit">
        <%= form.submit %>
    </div>
    <% end %>
</div>
<div class="back-link">
  <%= link_to "Back", post_path %>
</div>
